export UNITTEST_NAME=file_core_mt/TEST2
export UNITTEST_NUM=2

# standard unit test setup
. ../unittest/unittest.sh

require_test_type medium

# XXX libpmemobj has races that are there by design and are considered safe.
# remove the below line when they are removed or properly annotated
exit 0

require_fs_type pmem
configure_valgrind helgrind force-enable

setup

expect_normal_exit ./file_core_mt$EXESUFFIX $DIR/testfile1 20

pass
